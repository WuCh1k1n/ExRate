<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wuch1k1n.exrate.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        app:layout_heightPercent="92%" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical"
        app:layout_heightPercent="8%">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#bfbfbf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.wuch1k1n.exrate.ui.CustomBottomButton
                android:id="@+id/bt_exrate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:button_icon="@mipmap/ic_exrate_normal"
                app:button_text="汇率" />

            <com.wuch1k1n.exrate.ui.CustomBottomButton
                android:id="@+id/bt_now"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:button_icon="@mipmap/ic_now_normal"
                app:button_text="牌价" />

            <com.wuch1k1n.exrate.ui.CustomBottomButton
                android:id="@+id/bt_news"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:button_icon="@mipmap/ic_news_normal"
                app:button_text="资讯" />

            <com.wuch1k1n.exrate.ui.CustomBottomButton
                android:id="@+id/bt_me"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:button_icon="@mipmap/ic_me_normal"
                app:button_text="我" />
        </LinearLayout>
    </LinearLayout>

</android.support.percent.PercentRelativeLayout>
